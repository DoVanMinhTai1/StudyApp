<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_previous"
                android:contentDescription="Back"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Học Từ Vựng"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cài đặt buổi học"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <!-- Chọn chủ đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn chủ đề:"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinner_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Chọn cấp độ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn cấp độ:"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinner_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Phương pháp học -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn phương pháp học:"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/radio_group_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_flashcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FLASHCARD"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radio_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUIZ" />

            <RadioButton
                android:id="@+id/radio_rewrite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REWRITE" />
        </RadioGroup>

        <!-- Bắt đầu học -->
        <Button
            android:id="@+id/button_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bắt đầu học"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
