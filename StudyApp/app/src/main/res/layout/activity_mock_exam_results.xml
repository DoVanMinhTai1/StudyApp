<!-- res/layout/activity_mock_exam_results.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/mockExamResultsBodyBackground"
    android:padding="16dp"
    tools:context=".activity.exam.ExamResultActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_mock_exam_results1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        app:title="Kết quả thi thử"
        app:titleTextColor="@color/mockExamResultsHeaderText"
        app:titleCentered="true"
        app:navigationIconTint="@color/mockExamResultsHeaderText"
        android:elevation="4dp"/>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <ImageView
            android:id="@+id/resultImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/exam"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm: 8.5"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/correctAnswersTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số câu đúng: 34/40"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/timeTakenTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian làm: 45:32"
            android:textSize="20sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/retryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thi lại"
            android:layout_marginEnd="8dp"
            style="@style/ExamButtonPrimary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/chooseAnotherExamButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chọn đề khác"
            android:layout_marginStart="8dp"
            style="@style/ExamButtonPrimary"
            />
    </LinearLayout>
</LinearLayout>
