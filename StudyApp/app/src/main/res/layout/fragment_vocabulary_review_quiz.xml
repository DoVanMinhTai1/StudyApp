<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <Button
                android:id="@+id/button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="❮"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp" />

            <TextView
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ôn tập: Trắc nghiệm"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- Progress bar container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="#DDD"
            android:layout_marginBottom="8dp">

            <View
                android:id="@+id/progress_bar_fill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#3b5998"
                android:layout_gravity="left"
                android:layout_margin="0dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Từ 9 / 15"
            android:layout_marginBottom="16dp"/>

        <!-- Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/meaning_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Từ \Souvenir\ có nghĩa là gì?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="25dp"/>
        </LinearLayout>

        <!-- Quiz options -->
        <LinearLayout
            android:id="@+id/quiz_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">

            <Button
                android:id="@+id/option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quà lưu niệm"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hành lý"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vé máy bay"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/option4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khách sạn" />
        </LinearLayout>

        <!-- Action buttons -->
        <Button
            android:id="@+id/button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Câu tiếp theo"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/button_finish_early"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kết thúc sớm"
            android:background="#7f8c8d"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
