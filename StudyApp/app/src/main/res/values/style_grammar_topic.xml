<!-- res/values/styles.xml or themes.xml -->
<resources>
    <!-- You might have an AppTheme defined already -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="TopicListItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/list_item_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/grammar_list_item_selector</item> <!-- See drawable below -->
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>