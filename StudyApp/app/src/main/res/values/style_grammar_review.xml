<!-- res/values/styles.xml or themes.xml -->
<resources>
    <!-- ... other styles ... -->
    <style name="ReviewTopicListItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/listItemReviewText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/grammar_review_list_item_selector</item> <!-- See drawable -->
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ReviewTopicListItemText.NotLearned" parent="ReviewTopicListItemText">
        <item name="android:textColor">@color/listItemNotLearnedText</item>
        <item name="android:background">@drawable/grammar_review_not_learned_list_item_background</item> <!-- See drawable -->
        <item name="android:clickable">false</item> <!-- Not clickable if not learned -->
        <item name="android:focusable">false</item>
    </style>
</resources>