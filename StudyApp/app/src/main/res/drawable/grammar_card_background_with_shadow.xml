<!-- res/drawable/card_background_with_shadow.xml (Illustrative, CardView is better for this) -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10000000" /> <!-- Light shadow color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Background -->
    <item android:bottom="2dp" android:right="1dp" android:left="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>