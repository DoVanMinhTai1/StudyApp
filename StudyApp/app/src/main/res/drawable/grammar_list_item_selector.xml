<!-- res/drawable/list_item_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/list_item_background_hover"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:state_focused="true"> <!-- For accessibility/keyboard navigation -->
        <shape android:shape="rectangle">
            <solid android:color="@color/list_item_background_hover"/>
            <corners android:radius="5dp"/>
            <stroke android:width="2dp" android:color="@color/colorAccent"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/list_item_background"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>