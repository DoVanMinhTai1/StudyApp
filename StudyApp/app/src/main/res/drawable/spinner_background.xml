<!-- res/drawable/spinner_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/pathSelectionSpinnerBackground"/>
            <corners android:radius="6dp"/>
            <stroke android:width="1dp" android:color="@color/pathSelectionInputBorder"/>
        </shape>
    </item>
    <!-- Dropdown arrow icon -->
    <item android:gravity="center_vertical|end" android:right="8dp">
        <bitmap android:src="@android:drawable/arrow_down_float"
            android:gravity="center"
            android:tint="@color/pathSelectionFormGroupLabelText"/> <!-- Tint the arrow -->
    </item>
</layer-list>