<!-- res/drawable/do_exercise_option_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/doExerciseOptionBackgroundSelected"/>
            <corners android:radius="6dp"/>
            <stroke android:width="1dp" android:color="@color/doExerciseHeaderBackground"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#e4e6eb"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/doExerciseOptionBackground"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>
</selector>